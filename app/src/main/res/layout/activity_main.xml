<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

    <Button
        android:id="@+id/fragmentpplg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="PPLG"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/fragmentTO"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="TO"
        android:layout_below="@+id/fragmentpplg"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:id="@+id/fragmentkuliner"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/fragmentpplg"
        android:layout_alignParentEnd="true"
        android:text="Kuliner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragmentTO"
        app:layout_constraintTop_toBottomOf="@+id/fragmentpplg"
        tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/fragmentbusana"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_below="@+id/fragmentTO"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Busana"
            tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/fragmenttpfl"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="TPFL"
        android:layout_below="@+id/fragmentkuliner"
        android:layout_alignParentEnd="true"
        tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="760dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentbusana"
        tools:ignore="NotSibling" />

</androidx.constraintlayout.widget.ConstraintLayout>